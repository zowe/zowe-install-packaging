		<abstract>Change RFDSNPFX to proper second lvl qualifier</abstract>
		<description>Change RFDSNPFX to proper second lvl qualifier</description>
		<category>SMPMCS and REL files</category>
		<string multiLine="false" valueMustBeChoice="false">
			<validationType>DSNAME</validationType>
			<default>ZOWE</default>
		</string>
	</variable>	
	
	<variable name="csivol" scope="instance" visibility="public">
		<label>CSI Volume Serial</label>
